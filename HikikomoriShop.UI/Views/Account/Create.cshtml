@model HikikomoriShop.Domain.User

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">   Add user</h2>
            <hr/>
        </div>
        <div class="mb-3">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="Role"></label>
            <input asp-for="Role.Name" class="form-control"/>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Add new User</button>
        <a asp-controller="Account" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>

<style>
    .mb-3 {
        color: white;
    }
</style>