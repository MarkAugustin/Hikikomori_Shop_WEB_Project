@model HikikomoriShop.Domain.User

<div class="align-content-xxl-center">
    <form method="post" asp-action="Logout">
        <input asp-for="Id" hidden/>
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary">Are you sure?</h2>
                <hr/>
            </div>
            <button type="submit" class="btn btn-danger" style="width:150px">Logout!</button>
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary" style="width:150px">
                Back!
            </a>
        </div>
    </form>
</div>